<h1>Listing tarjeta</h1>

<table>
  <thead>
    <tr>
      <th>Notarjeta</th>
      <th>Idusuario</th>
      <th>Valor</th>
      <th>Saldo</th>
      <th>Saldo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tarjeta.each do |tarjetum| %>
      <tr>
        <td><%= tarjetum.notarjeta %></td>
        <td><%= tarjetum.idusuario %></td>
        <td><%= tarjetum.valor %></td>
        <td><%= tarjetum.saldo %></td>
        <td><%= tarjetum.saldo %></td>
        <td><%= link_to 'Show', tarjetum %></td>
        <td><%= link_to 'Edit', edit_tarjetum_path(tarjetum) %></td>
        <td><%= link_to 'Destroy', tarjetum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

