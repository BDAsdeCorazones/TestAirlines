<h1>Listing promocions</h1>

<table>
  <thead>
    <tr>
      <th>Idpromocion</th>
      <th>Codigopromocion</th>
      <th>Porcentaje</th>
      <th>Fechaentrada</th>
      <th>Vigencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @promocions.each do |promocion| %>
      <tr>
        <td><%= promocion.idpromocion %></td>
        <td><%= promocion.codigoPromocion %></td>
        <td><%= promocion.porcentaje %></td>
        <td><%= promocion.fechaentrada %></td>
        <td><%= promocion.vigencia %></td>
        <td><%= link_to 'Show', promocion %></td>
        <td><%= link_to 'Edit', edit_promocion_path(promocion) %></td>
        <td><%= link_to 'Destroy', promocion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

